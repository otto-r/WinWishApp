<Window x:Class="WishMeLuck.ShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WishMeLuck"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Share" Height="300" Width="188.939">
    <Grid>
        <ComboBox x:Name="ComboBoxSelectWishList" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Grid.Column="1" Grid.Row="0" />
        <TextBox x:Name="TextBoxUsername" HorizontalAlignment="Center" Height="23" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="120"/>

        <Button x:Name="ButtonShare" Click="ButtonShare_Click" Content="Share" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Width="75"/>
        <ListBox x:Name="ListBoxFriends" HorizontalAlignment="Center" Height="100" Grid.Row="2" VerticalAlignment="Center" Width="120" SelectionMode="Multiple"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!--<ColumnDefinition Width="*" />-->
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
